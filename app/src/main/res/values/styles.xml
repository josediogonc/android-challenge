<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultTextViewStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DefaultTextViewStyle.Gray" parent="DefaultTextViewStyle">
        <item name="android:textColor">@color/title_gray</item>
    </style>

    <style name="DefaultTextViewStyle.Small" parent="DefaultTextViewStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

    <style name="DefaultTextViewStyle.Large" parent="DefaultTextViewStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/title_gray</item>
    </style>

    <style name="TitleStyle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">18sp</item>
        <item name="android:maxLength">100</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TitleStyle.H1" parent="TitleStyle">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

</resources>